<table class="table">
  <thead>
    <tr>
      <th><%= t i18(:post, :title) %></th>
      <th><%= t i18(:post, :address) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.address %></td>
        <td><%= link_to "詳細", post, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>